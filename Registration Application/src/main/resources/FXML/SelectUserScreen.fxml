<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.Controllers.RegistreeConfirmController" hgap="10"
          vgap="10" styleClass="Login" stylesheets="@/Login.css">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <children>
        <Text id="welcome-text" text="Enter Registree's EMPLID"
              GridPane.columnIndex="1" GridPane.rowIndex="0"
              GridPane.columnSpan="1"/>
        <Label text="Registree Emplid:"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="registreeTextfield"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <HBox spacing="10" alignment="bottom_right"
              GridPane.columnIndex="1" GridPane.rowIndex="6">
            <Button fx:id="signInBtn" text="Sign In"
                    onAction="#handleRegistreeSubmitAction"/>
        </HBox>

        <Text fx:id="registreeActionTarget"
              GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    </children>
</GridPane>