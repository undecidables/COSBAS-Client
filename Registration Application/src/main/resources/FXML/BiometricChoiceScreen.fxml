<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.Controllers.BiometricChoiceController" hgap="10"
          vgap="10" styleClass="Login" stylesheets="@/Login.css">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <children>
        <Text id="welcome-text" text="Biometric Registration"
              GridPane.columnIndex="1" GridPane.rowIndex="0"
              GridPane.columnSpan="1"/>
        <Label text="Choose Biometric Type:"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <ComboBox fx:id="biometricCombo" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Facial"/>
                    <String fx:value="Fingerprint"/>
                </FXCollections>
            </items>
            <value>
                <String fx:value="Click To Choose"/>
            </value>
        </ComboBox>

        <Label text="Registree Preferred E-Mail:"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextField fx:id="emailField"
                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <HBox spacing="10" alignment="bottom_right"
              GridPane.columnIndex="1" GridPane.rowIndex="5">
            <Button fx:id="signInBtn" text="Sign In"
                    onAction="#handleBiometricSubmitAction"/>
        </HBox>

        <Text fx:id="biometricAccessTarget"
              GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    </children>
</GridPane>